@page "/register"

<PageTitle>Register</PageTitle>

<div class="Register">
    <div>
        <h2>Sign Up</h2>
    </div>

    <div class="RegisterInputs">
        <input placeholder="Username" />
    </div>

    <div class="RegisterInputs">
        <input placeholder="Password"/>
    </div>

    <div class="RegisterInputs">
        <input placeholder="Confirm Password"/>
    </div>

    <div>
